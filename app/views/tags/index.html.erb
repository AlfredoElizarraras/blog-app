<h1>Tags list</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
     <%= link_to tag.name, tag_path(tag) %> | <%= link_to "Delete this tag", tag_path(tag), 
                                                                                 method: :delete,
                                                                                 data: {confirm: "Really delete this tag?"} %>
    </li>
  <% end %>
</ul>
<br>  
<%= link_to  "Blog Home",  controller:'welcome'%>